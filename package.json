{
  "name": "vdomini",
  "author": "stagas",
  "short": "stagas/vdomini",
  "description": "mini jsx-compatible virtual dom",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/vdomini.git"
  },
  "keywords": [],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "targets": {
    "main": {
      "context": "node",
      "engines": {
        "node": ">=16.0"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "cov": "jest --coverage",
    "cov:watch": "jest --coverage --watchAll",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=2",
    "docs:watch": "onchange -i src -- npm run docs",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write src",
    "prepack": "npm run clean && npm run build",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@stagas/sucrase-jest-plugin": "^2.2.0-fork",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "documentation": "^13.2.5",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
